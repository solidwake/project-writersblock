<h1>Entries</h1>
<div class="row">
    {{#each entries}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{!-- to do: editIcon --}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{body}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="user image">
                    <a href="/entries/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/entries/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Entries to display</p>
    {{/each}}
</div>